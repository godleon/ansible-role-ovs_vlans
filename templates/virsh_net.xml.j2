<network>
    <name>{{ ovs_vlans_OvsBridgeName }}</name>
    <forward mode='bridge'/>
    <bridge name='{{ ovs_vlans_OvsBridgeName }}'/>
    <virtualport type='openvswitch'/>

{% for item in ovs_vlans_TrunkVlans %}
    <portgroup name='native_{{ item }}'>
         <vlan trunk='yes'>
            <tag id='{{ item }}' nativeMode='untagged'/>
        </vlan>
    </portgroup>
{% endfor %}

    <portgroup name='single_nic_with_vlans'>
        <vlan trunk='yes'>
        {% for item in ovs_vlans_TrunkVlans %}
            <tag id='{{ item }}' {% if item == ovs_vlans_NativeVlanIdInTrunk %}nativeMode='untagged'{% endif %} />
        {% endfor %}
        </vlan>
    </portgroup>

    <portgroup name='trunk_all' default='yes'>
        <vlan trunk='yes'>
        {% for item in ovs_vlans_TrunkVlans %}
            <tag id='{{ item }}'/>
        {% endfor %}
        </vlan>
    </portgroup>
</network>